<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">


        <!--이메일 입력-->
        <!--비밀번호 입력-->

        <!--로그인하기-->

        <ImageView
            android:id="@+id/imgAdminLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:src="@drawable/logo_with_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="162dp" />

        <EditText
            android:id="@+id/etAdminLoginDepartmentId"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/background_et"
            android:ems="10"
            android:hint="부서 아이디를 입력하세요"
            android:padding="12dp"
            android:textColorHint="#000000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgAdminLogo" />

        <EditText
            android:id="@+id/etAdminLoginPassword"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/background_et"
            android:ems="10"
            android:hint="비밀번호를 입력하세요"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColorHint="#000000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etAdminLoginDepartmentId"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="377dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAdminLoginLogin"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/background_btn_primary"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:stateListAnimator="@null"
            android:text="로그인하기"
            android:textColor="@color/white"
            android:textColorHint="#000000"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>